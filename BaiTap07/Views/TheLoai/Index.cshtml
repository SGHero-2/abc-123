
@{
    ViewData["Title"] = "Index";
}

<div>
    <table class="table">
        <thead>
            <th>Tên Thể Loại</th>
            <th>Ngày Tạo</th>
            <th>Chức Năng</th>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.TheLoai)
            {
                <tr>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @String.Format("{00:dd/MM/yyyy}", item.DateCreate)
                    </td>
                        <td width ="40%">
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                Edit
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>

