<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/pngtree-electronic-store-logo-vector-png-image_7481118.png" alt="Logo" style="height: 100px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"; style="font-size: 20px">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="TheLoai" asp-action="Index">Thể Loại</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="SanPham" asp-action="Index">Sản Phẩm</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="DonHang" asp-action="Index">Đơn Hàng</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="GioiThieu">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Danhsach">Danh Sách Sản Phẩm</a>
                        </li>
                        <vc:the-loai></vc:the-loai>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="GioHang" asp-action="Index">Giỏ Hàng</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section id="contact">
        <footer id="footer" class="py-5 bg-dark text-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h5>Address</h5>
                        <p><i class="fa fa-map-marker"></i> Location</p>
                        <p><i class="fa fa-phone"></i> Call +01 1234567890</p>
                        <p><i class="fa fa-envelope"></i> demo@gmail.com</p>
                        <div class="social-icons">
                            <a href="https://www.facebook.com" target="_blank">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://www.twitter.com" target="_blank">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://www.linkedin.com" target="_blank">
                                <i class="fab fa-linkedin"></i>
      -                      </a>
                            <a href="https://www.instagram.com" target="_blank">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h5>Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-light">Home</a></li>
                            <li><a href="#" class="text-light">About</a></li>
                            <li><a href="#" class="text-light">Services</a></li>
                            <li><a href="#" class="text-light">Pricing</a></li>
                            <li><a href="#" class="text-light">Contact Us</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h5>Info</h5>
                        <p>Necessary, making this the first true generator on the Internet. It uses a dictionary of over 200 Latin words.</p>
                    </div>
                    <div class="col-md-3">
                        <h5>Subscribe</h5>
                        <form action="#" method="post">
                            <input type="email" class="form-control mb-2" placeholder="Enter email" />
                            <button type="submit" class="btn btn-danger">Subscribe</button>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <p>&copy; 2024 All Rights Reserved By Free Html Templates</p>
                </div>
            </div>
        </footer>
    </section>

    <div class="social-icons-bottom-right">
        <a href="https://www.facebook.com" target="_blank" class="invert">
            <img src="~/images/facebook-logo-facebook-icon-transparent-free-png.webp" alt="Facebook" style="width: 55px; height: 55px;">
        </a>
        <a href="https://zalo.me" target="_blank" class="zalo">
            <img src="~/images/zalo-logo.png" alt="Zalo" style="width: 50px; height: 50px;">
        </a>
        <a href="https://www.messenger.com" target="_blank" class="invert">
            <img src="~/images/logo-512.webp" alt="Messenger" style="width: 45px; height: 45px;">
        </a>
        <a href="https://www.youtube.com" target="_blank" class="invert">
            <img src="~/images/1384060.png" alt="Youtube" style="width: 40px; height: 40px;">
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <a href="https://www.youtube.com/embed/dQw4w9WgXcQ?autoplay=1" target="_blank" style="text-decoration: none;">
        <button class="btn btn-warning">Nhấn vào đây để nhận ưu đãi đặc biệt!</button>
    </a>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
