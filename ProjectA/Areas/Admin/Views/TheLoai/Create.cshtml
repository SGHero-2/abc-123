@model ProjectA.Models.TheLoai

<div class="container">
    <h3>Thêm Thể Loại</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Tên Thể Loại</label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateCreate">Ngày tạo</label>
            <input asp-for="DateCreate" type="date" class="form-control" />
            <span asp-validation-for="DateCreate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

